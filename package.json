{
  "name": "@maxqwars/metaform",
  "version": "1.0.0",
  "description": "Metaform is an open library for working with the Anilibria API without external dependencies.",
  "license": "MIT",
  "private": false,
  "readme": "https://github.com/maxqwars/metaform#readme",
  "keywords": [
    "anilibria",
    "rest-api",
    "typescript"
  ],
  "bugs": "https://github.com/maxqwars/metaform/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxqwars/metaform.git"
  },
  "author": {
    "name": "Maxim Maximenko (maxqwars)",
    "email": "maxqwars@gmail.com"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "dev": "cross-env NODE_ENV=development rollup -c -w",
    "lint": "eslint ./src --ext ts",
    "lint:fix": "eslint --fix",
    "format": "npx prettier --write .",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add .",
    "postversion": "git push && git push --tags",
    "husky:install": "husky install"
  },
  "devDependencies": {
    "@jjldxz/rollup-plugin-env-files": "^1.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "serve": "^13.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown src/"
  }
}
